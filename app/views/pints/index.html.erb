<p id="notice"><%= notice %></p>

<h1>Index o'Pints</h1>

  <div id="pints" class="transitions-enabled">
    <% @pints.each do |pint| %>
      <div class="box panel panel-default">
        <%= image_tag pint.image.url(:medium) %>
        <div class="panel-body">
          <%= pint.description %>
          <%= pint.user.email if pint.user %>
          <%= link_to 'Show', pint %>
          <% if pint.user == current_user %>
            <%= link_to 'Edit', edit_pint_path(pint) %>
            <%= link_to 'Destroy', pint, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
