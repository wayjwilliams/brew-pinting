<p id="notice"><%= notice %></p>

<h1>Index o'Pints</h1>

  <div id="pints" class="transitions-enabled">
    <% @pints.each do |pint| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pint.image.url(:medium)), pint %>
        <div class="panel-body">
          <%= pint.description %>
          <strong><%= pint.user.email if pint.user %></strong>
          <%= link_to 'Show', pint %>
          <% if pint.user == current_user %>
            <div class="actions">
              <%= link_to 'Edit', edit_pint_path(pint) %>
              <%= link_to 'Destroy', pint, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
