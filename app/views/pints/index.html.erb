<p id="notice"><%= notice %></p>

<h1>Listing Pints</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pints.each do |pint| %>
      <tr>
        <td><%= pint.description %></td>
        <td><%= link_to 'Show', pint %></td>
        <td><%= link_to 'Edit', edit_pint_path(pint) %></td>
        <td><%= link_to 'Destroy', pint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pint', new_pint_path %>
